<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="13dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_back">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:orientation="vertical"
                android:padding="5dp">
                <TextView
                    android:id="@+id/date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05/08/2020"
                    android:textSize="16dp"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06:00 pm"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:layout_margin="10dp"/>

            </LinearLayout>

            <View
                android:layout_width="4dp"
                android:layout_height="150dp"
                android:background="@drawable/txt_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/userplace_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="cairo"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/userdestination_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nasr City"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:src="@drawable/cash_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cash_w"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/txt_tripPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/egp_w"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_trip_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>


</RelativeLayout>